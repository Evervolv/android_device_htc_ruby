# wifi ++
# +++ TI soft AP +++
service tiap_loader /system/bin/tiap_loader tiap0 -f /system/etc/wifi/firmware_ap.bin -e /proc/calibration -i /system/etc/wifi/tiwlan_ap.ini
    class main
    disabled
    oneshot

service ifcfg2_up /system/bin/ifconfig tiap0 up
    class main
    disabled
    oneshot

service hostapd /system/bin/hostapd /data/misc/wifi/hostapd.conf
    class main
    disabled
    oneshot
# --- TI soft AP ---

service wlan_loader /system/bin/tiwlan_loader -f /system/etc/wifi/firmware.bin -e /proc/calibration -i /system/etc/wifi/tiwlan.ini
    class main
    disabled
    oneshot

service ifcfg_up /system/bin/ifconfig tiwlan0 up
    class main
    disabled
    oneshot

service wpa_supplicant /system/bin/wpa_supplicant -Dtiwlan0 -itiwlan0 -c/data/misc/wifi/wpa_supplicant.conf
    class main
    group system
    socket wpa_tiwlan0 dgram 660 wifi wifi
    disabled
    oneshot

service dhcpcd_tiwlan0 /system/bin/dhcpcd -BKL -d tiwlan0
    class main
    disabled
    oneshot
# wifi--

service rmt_storage /system/bin/rmt_storage /dev/block/mmcblk0p25 /dev/block/mmcblk0p26 NULL NULL /dev/block/mmcblk0p27 /dev/block/mmcblk0p28 /dev/block/mmcblk0p20
    class core
    user root
    group radio cache inet misc
    disabled

on property:ro.emmc=1
    start rmt_storage

# for modem link
service modem /system/xbin/wireless_modem
    user system
    group system radio
    disabled

# for modem link
on property:service.modem.enable=1
    start modem

# for modem link
on property:service.modem.enable=0
    stop modem

service hdmid /system/bin/hdmid
    class late_start
    socket displayd stream 0660 root system graphics
    disabled

service htcbatt /system/bin/htcbatt
    class late_start
    user root

service mpdecision /system/bin/mpdecision --Nw 5.4 --Ts 350 --no_sleep --avg_comp --single_core_while_panel_off
    class late_start
    user root
    group radio cache inet misc audio sdcard_rw
    disabled

service thermald /system/bin/thermald
    class late_start
    user root
    group radio cache inet misc audio
    disabled

on property:init.svc.bootanim=stopped
    start thermald
    start mpdecision

service htc_ebdlogd /system/bin/htc_ebdlogd -s -k -P 7
    user root
    disabled
    oneshot
    ioprio idle 0

service htc_ebdlogd_rel /system/bin/htc_ebdlogd -s -k
    user root
    disabled
    oneshot
    ioprio idle 0

on property:ro.build.tags=test-keys
    start htc_ebdlogd

on property:ro.build.tags=release-keys
    start htc_ebdlogd_rel

# QMUX must be in multiple groups to support external process connections
service qmuxd /system/bin/qmuxd
    class late_start
    user radio
    group radio audio

service netmgrd /system/bin/netmgrd
    class late_start

on property:ro.use_data_netmgrd=false
    # netmgr not supported on specific target
    stop netmgrd

service post-boot /system/bin/sh /system/etc/init.post_boot.sh
    user root
    oneshot

