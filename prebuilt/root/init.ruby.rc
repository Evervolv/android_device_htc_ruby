service btips /system/bin/btipsd --android_log BTIPSD
    class main
    socket bluetooth stream 660 bluetooth bluetooth
    socket dbus_bluetooth stream 660 bluetooth bluetooth
    group bluetooth net_bt_admin misc sdcard_rw
